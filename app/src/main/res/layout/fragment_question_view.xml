<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/answerBackground"
    android:background="@drawable/diarytexture"
    android:padding="10dp"
    tools:context=".ui.QuestionViewFragment">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/sphinxImage"
        android:background="@drawable/campaigns_sphinx"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Answer correctly and I shall guide you"
        android:id="@+id/sphinxCaption"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/sphinxImage"
        android:layout_toRightOf="@+id/sphinxImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question Y'all!"
        android:id="@+id/question"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_below="@+id/sphinxImage"
        android:layout_alignParentLeft="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/option1"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/question"
        android:layout_alignParentLeft="true" />
    
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/option2"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/option1"
        android:layout_alignParentLeft="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/option3"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/option2"
        android:layout_alignParentLeft="true" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/option4"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/option3"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
