<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diarytexture"
    tools:context=".ui.CityViewFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave The City"
        android:id="@+id/leaveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cityHeader"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/cityName"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/cityImage"
            android:layout_marginLeft="5dp"
            android:layout_alignBaseline="@id/cityImage"
             />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cityFrame"
        android:layout_above="@+id/leaveButton"
        android:layout_below="@+id/cityHeader"
        >
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cityCampaigns"
            android:layout_alignParentLeft="true"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="15dp"
            android:padding="10dp"
            android:gravity="center"
            android:numColumns="2"
            />
    </RelativeLayout>
</RelativeLayout>
